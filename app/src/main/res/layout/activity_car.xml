<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/fool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美食"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/loacation_ditu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医院"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/loacation_ditu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/fool"/>

        <Button
            android:id="@+id/jindian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="景点"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/loacation_ditu"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/hospital"/>

        <Button
            android:id="@+id/search"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ditusea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

       <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"/>

        <Button
            android:id="@+id/luxian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路线"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/loacation_ditu"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>